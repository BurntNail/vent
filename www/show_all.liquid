{% include "partials/header.liquid" %}

<h2>People</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">
        Name
      </th>
      <th scope="col">
      	Pts
      </th>
      <th scope="col">
        Form
      </th>
      <th scope="col">
        View/Edit
      </th>
    </tr>
  </thead>
  <tbody>
    {% assign prev_form = "" %}
    {% for person in people %}
      {% if prev_form != person.form %}
        {% assign prev_form = person.form %}
        <tr>
          <td colspan="5" id="{{person.form}}">
            <h3>
              <a class="link-secondary" href="/show_all#{{person.form}}">{{ person.form }}</a>
            </h3>
          </td>
        </tr>
      {% endif %}
      <tr>
      {% assign fn_array = person.first_name | split: "" %}
        <td>{{ fn_array[1] }}. {{ person.surname }}
        </td>
        <td>
        	{{person.pts}}
        </td>
        <td>
          {{ person.form }}
        </td>
        <td>
          <a href="/edit_person/{{person.id}}" class="btn btn-secondary">View/Edit Person.</a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

<br><br>

<h2 id="AllEvents">Events</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">
        Name
      </th>
      <th scope="col">
        Date
      </th>
      {% if auth.permissions["edit_events"] %}
        <th scope="col">
          Remove
        </th>
      {% endif %}
      <th scope="col">
        View/Edit
      </th>
    </tr>
  </thead>
  <tbody>
    {% for event in events %}
      <tr>
        <td>{{ event.event_name }}
        </td>
        <td>
          {{ event.date }}
        </td>
        {% if auth.permissions["edit_events"] %}
          <td>
            <form method="POST" action="/remove_event">
              <input
                type="hidden"
                name="event_id"
                value="{{event.id}}">
              <button type="submit" class="btn btn-danger">Remove Event.</button>
            </form>
          </td>
        {% endif %}
        <td>
          <a href="/update_event/{{event.id}}" class="btn btn-secondary">View/Edit Event.</a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% include "partials/footer.liquid" %}
