    <title>{{ siteinfo.html_title }}</title>
  </head>
  <body>
    <div class="container">

        <nav class="navbar navbar-expand-lg bg-body-primary">
          <a class="navbar-brand" href="/">{{ siteinfo.instance_name }}</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link"
                  aria-current="page"
                  href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/show_all">See All</a>
              </li>

              {% if auth.permissions["export_csv"] %}
              <li class="nav-item dropdown">
                <li class="nav-item">
                  <a class="nav-link" href="/csv">
                  {% if auth.permissions["import_csv"] %}
                  Import/Export from/to CSV
                  {% else %}
                  Export to CSV
{% endif %}
                  </a>
                </li>
              {% endif %}

              {% if auth.permissions["edit_people"] %}
              <li class="nav-item dropdown">
                <li class="nav-item">
                  <a class="nav-link" href="/add_person">Add Person</a>
                </li>
              {% endif %}

              {% if auth.permissions["edit_events"] %}
                <li class="nav-item">
                  <a class="nav-link" href="/add_event">Add Event</a>
                </li>  
              {% endif %}

              {% if auth.permissions["run_migrations"] %}
                <li class="nav-item">
                  <a class="nav-link" href="/eoy_migration">Change Form Names</a>
                </li>  
              {% endif %}

              {% if auth.permissions["dev_access"] %}
              <li class="nav-item">
                <a class="nav-link" href="/reload_partials">Reload Partials</a>
              </li>  
              <li class="nav-item">
				<a class="nav-link" href="/logs">Get Logs</a>
              </li>
            {% endif %}

            {% if auth.permissions["view_xlsx"] %}
                <li class="nav-item">
                  <a class="nav-link" href="/spreadsheet">Spreadsheet</a>
                </li>
            {% endif %}


              {% unless auth.role == "visitor" %}
                            <li class="nav-item">
                              <a class="nav-link" href="/add_reward">See Rewards</a>
                            </li>
                <a href="#" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{auth.user.first_name}} {{auth.user.surname}}</a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="/edit_user" class="nav-link">Edit Profile</a>
                    <a href="/logout" class="nav-link">Logout</a>
                  </li>
                </ul>
              </li>
              {% else %}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {% endunless %}
            </ul>
            </div>
          </nav>
